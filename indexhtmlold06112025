    <!-- Carica Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        // Configurazione Tailwind
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'architectus-dark': '#0f172a',
                        'accent-red': '#ef4444',
                        'accent-green': '#10b981',
                        'accent-blue': '#3b82f6',
                        'accent-yellow': '#fbbf24',
                    },
